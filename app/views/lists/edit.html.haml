:css
  .row .row {
  margin-left: auto;
  margin-right: auto;
  height: 2em;
  }

%h1.center= "Edit #{@list.name}" 
%hr.shrink-me


= form_tag(add_friends_list_path(@list)) do 
  - @friends.each_with_index do |friend, index|
    .row.shrink-me.middle
      .large-3.columns.border-right.row-height
        =image_tag friend.avatar, class: "circle middle"
      .large-3.columns.border-right.row-height{class: "color-me-#{index}"}
        .h2.name.center= "#{friend.name}"
      .large-3.columns.border-right.row-height{class: "color-me-#{index}"}
        .h2.name.center= "@#{friend.username}"
      .large-3.columns.row-height
        = select_tag "friends[][schedule]", options_for_select(FriendListSchedule.schedules, friend.current_schedule(@list)), class: "middle", id: "friend-list-options-#{index}"
        =hidden_field_tag "friends[][friend_id]", friend.id
        =hidden_field_tag "list", @list.id 
    %hr.shrink-me
  =submit_tag "Submit", class: "button success large float-center half-width"
