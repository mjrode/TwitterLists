-@tweets.each do |tweet|
  .columns.large-4.large-offset-4.center
    =tweet.html_block.html_safe
    =form_tag replies_create_path do 
      .form-group
        Reply
        =text_area_tag :body, "@#{tweet.friend.username}", class: "full-width form-control resize-reply"
      .form-group
        =hidden_field_tag :remote_tweet_id, tweet.remote_tweet_id
        =hidden_field_tag :user_id, tweet.user.id
        =hidden_field_tag :tweet_id, tweet.id
      .form-group
        =submit_tag "Reply", class: "yellow button half-width float-center"

    %hr

.clear-both=paginate @tweets
